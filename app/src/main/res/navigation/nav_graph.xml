<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.emikhalets.sunnydayapp.ui.pager.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_preferencePagerFragment"
            app:destination="@id/preferencePagerFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/preferencePagerFragment"
        android:name="com.emikhalets.sunnydayapp.ui.preference.PreferencePagerFragment"
        android:label="PreferencePagerFragment" />

    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.emikhalets.sunnydayapp.ui.citylist.CityListFragment"
        android:label="CityListFragment"
        tools:layout="@layout/fragment_city_list" />

    <fragment
        android:id="@+id/currentFragment"
        android:name="com.emikhalets.sunnydayapp.ui.weather.WeatherFragment"
        android:label="CurrentFragment"
        tools:layout="@layout/fragment_current" >
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.emikhalets.sunnydayapp.ui.details.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details" />
</navigation>