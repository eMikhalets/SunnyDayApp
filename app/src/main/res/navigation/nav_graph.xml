<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.emikhalets.sunnydayapp.ui.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_preferencePagerFragment"
            app:destination="@id/preferencePagerFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/preferencePagerFragment"
        android:name="com.emikhalets.sunnydayapp.ui.PreferencePagerFragment"
        android:label="PreferencePagerFragment" />

    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.emikhalets.sunnydayapp.ui.citylist.CityListFragment"
        android:label="CityListFragment"
        tools:layout="@layout/fragment_city_list" />

    <fragment
        android:id="@+id/currentFragment"
        android:name="com.emikhalets.sunnydayapp.ui.weather.CurrentWeatherFragment"
        android:label="CurrentFragment"
        tools:layout="@layout/fragment_current" />

    <fragment
        android:id="@+id/forecastDailyFragment"
        android:name="com.emikhalets.sunnydayapp.ui.forecast.ForecastDailyFragment"
        android:label="ForecastDailyFragment"
        tools:layout="@layout/fragment_forecast_daily" />
</navigation>