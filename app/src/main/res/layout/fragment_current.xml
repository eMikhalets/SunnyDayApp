<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_weather_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1">

        <TextView
            android:id="@+id/text_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Moscow" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/text_city_name"
            app:layout_constraintStart_toStartOf="@+id/text_city_name"
            app:layout_constraintTop_toBottomOf="@+id/text_city_name"
            tools:text="12 Янв 2020" />

        <ImageView
            android:id="@+id/image_weather_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image.description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_city_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_date"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_weather_icon"
            tools:text="30 °С" />

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_temp"
            tools:text="Солнечно" />

        <ImageView
            android:id="@+id/image_wind_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image.description"
            android:src="@drawable/ic_wind"
            app:layout_constraintEnd_toStartOf="@+id/image_humidity_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_humidity_icon" />

        <TextView
            android:id="@+id/text_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/image_wind_icon"
            app:layout_constraintStart_toStartOf="@+id/image_wind_icon"
            app:layout_constraintTop_toBottomOf="@+id/image_wind_icon"
            tools:text="50 км/ч" />

        <ImageView
            android:id="@+id/image_humidity_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image.description"
            android:src="@drawable/ic_humidity"
            app:layout_constraintEnd_toStartOf="@+id/image_pressure_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_wind_icon"
            app:layout_constraintTop_toBottomOf="@+id/text_desc" />

        <TextView
            android:id="@+id/text_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/image_humidity_icon"
            app:layout_constraintStart_toStartOf="@+id/image_humidity_icon"
            app:layout_constraintTop_toBottomOf="@+id/image_humidity_icon"
            tools:text="146 %" />

        <ImageView
            android:id="@+id/image_pressure_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image.description"
            android:src="@drawable/ic_pressure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_humidity_icon"
            app:layout_constraintTop_toTopOf="@+id/image_humidity_icon" />

        <TextView
            android:id="@+id/text_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/image_pressure_icon"
            app:layout_constraintStart_toStartOf="@+id/image_pressure_icon"
            app:layout_constraintTop_toBottomOf="@+id/image_pressure_icon"
            tools:text="007 кПа" />

        <Button
            android:id="@+id/btn_more_weather"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/current.btn.more_details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_humidity" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/pb_loading_current"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/layout_weather_current"
        app:layout_constraintEnd_toEndOf="@+id/layout_weather_current"
        app:layout_constraintStart_toStartOf="@+id/layout_weather_current"
        app:layout_constraintTop_toTopOf="@+id/layout_weather_current"
        tools:alpha="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_forecast_daily"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_weather_current"
        tools:alpha="1"
        tools:listitem="@layout/item_forecast_daily" />

    <ProgressBar
        android:id="@+id/pb_loading_daily"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_weather_current"
        tools:alpha="1" />

    <TextView
        android:id="@+id/text_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current.text.load_data"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>