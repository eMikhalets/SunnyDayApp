<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_cities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_city_list_scene">

    <TextView
        android:id="@+id/text_notice"
        style="@style/CitiesListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cities_text_empty_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_city" />

    <TextView
        android:id="@+id/text_location_city"
        style="@style/CitiesListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_view_item"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Moscow, RU" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_cities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_city"
        tools:listitem="@layout/item_city" />

    <HorizontalScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_city">

        <com.emikhalets.sunnydayapp.utils.ChartView
            android:id="@+id/chart_hourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#50000000"/>
    </HorizontalScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>