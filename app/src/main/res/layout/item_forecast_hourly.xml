<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/image_weather"
        app:layout_constraintStart_toStartOf="@+id/image_weather"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="19:00" />

    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="@dimen/icon_size.large"
        android:layout_height="@dimen/icon_size.large"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/forecast_hourly.image.desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_time"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_temp_min"
        app:layout_constraintStart_toEndOf="@+id/image_weather"
        app:layout_constraintTop_toTopOf="@+id/image_weather"
        tools:text="28 °С" />

    <TextView
        android:id="@+id/text_temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_weather"
        app:layout_constraintStart_toStartOf="@+id/text_temp_max"
        app:layout_constraintTop_toBottomOf="@+id/text_temp_max"
        tools:text="18 °С" />

    <TextView
        android:id="@+id/text_weather_decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_wind_dir"
        app:layout_constraintStart_toEndOf="@+id/image_weather"
        app:layout_constraintTop_toTopOf="@+id/text_time"
        tools:text="Солнечно" />

    <ImageView
        android:id="@+id/image_pressure"
        android:layout_width="@dimen/icon_size.small"
        android:layout_height="@dimen/icon_size.small"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/forecast_hourly.image.pressure"
        app:layout_constraintBottom_toTopOf="@+id/image_wind"
        app:layout_constraintStart_toStartOf="@+id/image_wind"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_pressure"
        app:layout_constraintStart_toEndOf="@+id/image_pressure"
        app:layout_constraintTop_toTopOf="@+id/image_pressure"
        tools:text="994.195 кПа" />

    <ImageView
        android:id="@+id/image_wind"
        android:layout_width="@dimen/icon_size.small"
        android:layout_height="@dimen/icon_size.small"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/forecast_hourly.image.wind"
        app:layout_constraintBottom_toBottomOf="@+id/image_weather"
        app:layout_constraintEnd_toStartOf="@+id/text_wind_speed"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_wind"
        app:layout_constraintEnd_toStartOf="@+id/text_wind_dir"
        app:layout_constraintTop_toTopOf="@+id/image_wind"
        tools:text="14 км/ч" />

    <TextView
        android:id="@+id/text_wind_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_wind_speed"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Северо-запад" />
</androidx.constraintlayout.widget.ConstraintLayout>