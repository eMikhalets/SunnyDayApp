<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- APPLICATION -->

    <style name="AppToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackgroundBlock</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="titleTextColor">@color/colorText</item>
        <item name="subtitleTextColor">@color/colorText</item>
    </style>

    <style name="AppTabLayout">
        <item name="tabBackground">@color/colorBackgroundApp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">?attr/actionBarSize</item>
        <item name="tabIndicatorColor">@color/colorBackgroundBlock</item>
        <item name="tabTextColor">@color/colorText</item>
    </style>

    <style name="AppText">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTextVeryBig" parent="AppText">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="AppTextBig" parent="AppText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextMedium" parent="AppText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextSmall" parent="AppText">
        <item name="android:textSize">16sp</item>
    </style>


    <!-- CITIES LIST -->

    <style name="CitiesListText" parent="AppTextMedium">
        <item name="android:background">@drawable/bg_view_item</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
    </style>


    <!-- WEATHER -->

    <style name="WeatherTextTemperature" parent="AppTextVeryBig">
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

    <style name="WeatherTextTempUnit" parent="AppTextBig">
        <item name="android:layout_marginTop">16sp</item>
    </style>

    <style name="WeatherTextDesc" parent="AppTextBig">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="WeatherTextDetails" parent="AppTextSmall">
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <!-- FORECAST -->

    <style name="ForecastText" parent="AppTextSmall">
        <item name="android:layout_margin">8sp</item>
    </style>
</resources>