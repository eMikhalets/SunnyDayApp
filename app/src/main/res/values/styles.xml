<resources>
    <!--========== THEMES ==========-->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <style name="AppTheme.Night" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorOnBackground">@color/colorBackgroundNight</item>
        <item name="colorControlNormal">@color/colorTextNight</item>
        <item name="colorText">@color/colorTextNight</item>
    </style>

    <style name="AppTheme.Clear" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryClear</item>
        <item name="colorSecondary">@color/colorSecondaryClear</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <style name="AppTheme.Clouds" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryClouds</item>
        <item name="colorSecondary">@color/colorSecondaryClouds</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <style name="AppTheme.Rain" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryRain</item>
        <item name="colorSecondary">@color/colorSecondaryRain</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <style name="AppTheme.Storm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryStorm</item>
        <item name="colorSecondary">@color/colorSecondaryStorm</item>
        <item name="colorOnBackground">@color/colorBackgroundNight</item>
        <item name="colorControlNormal">@color/colorTextNight</item>
        <item name="colorText">@color/colorTextNight</item>
    </style>

    <style name="AppTheme.Snow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimarySnow</item>
        <item name="colorSecondary">@color/colorSecondarySnow</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <style name="AppTheme.Mist" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryMist</item>
        <item name="colorSecondary">@color/colorSecondaryMist</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorText">@color/colorText</item>
    </style>

    <!--========== VIEWS ==========-->

    <style name="AppToolBar">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextColor">?attr/colorText</item>
        <item name="subtitleTextColor">?attr/colorText</item>
    </style>

    <style name="AppTabLayout">
        <item name="tabBackground">?attr/colorOnBackground</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">?attr/actionBarSize</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextColor">?attr/colorText</item>
    </style>

    <style name="AppButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--========== TEXT ==========-->

    <style name="AppText">
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="AppText.VBig" parent="AppText">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="AppText.Big" parent="AppText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Mid" parent="AppText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.Sml" parent="AppText">
        <item name="android:textSize">16sp</item>
    </style>
</resources>