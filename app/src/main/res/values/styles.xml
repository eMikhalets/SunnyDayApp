<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="AppTabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">?attr/actionBarSize</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_bright</item>
        <item name="tabTextColor">@android:color/black</item>
    </style>

    <!-- CITIES LIST -->

    <style name="CitiesListText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- WEATHER -->

    <style name="WeatherText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WeatherTextHeader" parent="WeatherText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WeatherTextTemp" parent="WeatherText">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="WeatherTextUnit" parent="WeatherText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="WeatherTextNight" parent="WeatherText">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeatherTextDetails" parent="WeatherText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="WeatherTextSun">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeatherHourlyText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WeatherHourlyTextDark" parent="WeatherHourlyText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- FORECAST -->

    <style name="ForecastText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ForecastTextTemp" parent="ForecastText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>