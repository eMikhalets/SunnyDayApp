<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:key="pref_category_main"
        android:title="@string/pref_pager_category_main">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_query_lang"
            android:entryValues="@array/pref_query_lang_values"
            android:key="@string/pref_pager_key_lang"
            android:summary="@string/pref_pager_lang_en"
            android:title="@string/pref_pager_lang" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_pager_key_theme"
            android:title="@string/pref_pager_theme" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_units"
            android:entryValues="@array/pref_units_values"
            android:key="@string/pref_pager_key_units"
            android:summary="@string/pref_pager_unit_metric"
            android:title="@string/pref_pager_units" />
    </PreferenceCategory>
</PreferenceScreen>