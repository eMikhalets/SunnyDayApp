<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:key="pref_category_main"
        android:title="@string/pref_pager.category_main">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_query_lang"
            android:entryValues="@array/pref_query_lang_values"
            android:key="@string/pref_key_lang"
            android:summary="@string/pref_pager.lang_en"
            android:title="@string/pref_pager.lang_label" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_theme"
            android:title="@string/pref_pager.dark_theme" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_pager.category_units">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_units_temp"
            android:entryValues="@array/pref_units_temp_values"
            android:key="@string/pref_key_temp"
            android:summary="@string/pref_pager.unit_temp_c"
            android:title="@string/pref_pager.units_temp" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_units_pressure"
            android:entryValues="@array/pref_units_pressure_values"
            android:key="@string/pref_key_press"
            android:summary="@string/pref_pager.unit_press_mb"
            android:title="@string/pref_pager.units_pressure" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_units_speed"
            android:entryValues="@array/pref_units_speed_values"
            android:key="@string/pref_key_speed"
            android:summary="@string/pref_pager.unit_speed_kmh"
            android:title="@string/pref_pager.units_speed" />
    </PreferenceCategory>
</PreferenceScreen>