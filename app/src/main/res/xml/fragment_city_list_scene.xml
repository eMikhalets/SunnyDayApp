<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    app:defaultDuration="300">

    <Transition
        motion:constraintSetEnd="@+id/state_cities"
        motion:constraintSetStart="@id/state_no_cities" />

    <ConstraintSet android:id="@+id/state_no_cities">

        <Constraint
            android:id="@+id/text_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:text="@string/cities_text_empty_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_city" />

        <Constraint
            android:id="@+id/list_cities"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_city" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_cities">

        <Constraint
            android:id="@+id/text_notice"
            style="@style/CitiesListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:text="@string/cities_text_empty_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_city" />

        <Constraint
            android:id="@+id/list_cities"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="1"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_city" />
    </ConstraintSet>
</MotionScene>